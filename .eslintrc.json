{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-trailing-spaces": 2,
    "eol-last": 2,
    "space-in-parens": [
      "error",
      "never"
    ],
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-throw-literal": 0,
    "max-len": 0,
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "no-console": 0,
    "comma-dangle": [
      "error",
      "never"
    ]
  }
}